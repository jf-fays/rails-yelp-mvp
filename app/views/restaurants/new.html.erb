<h2>Create a new restaurant</h2>
<div class="container">
<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"] %>
  <%= f.submit class:'btn btn-primary'%>
<% end %>
</div>
<div class="btn btn-warning"><%= link_to 'BACK TO LIST', root_path %></div>
</div>
